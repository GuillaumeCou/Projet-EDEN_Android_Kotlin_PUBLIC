<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".inscriptionSequence.GetPhoneActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/getPhoneVerif_telephone_edittext"
                    style="@style/FirebaseUI.TextInputEditText.PhoneField"
                    android:layout_width="243dp"
                    android:hint="Numéro de téléphone"
                    android:textAppearance="@style/FirebaseUI.TextInputEditText.PhoneField" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:id="@+id/getPhoneVerif_sendNumber_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vérifier" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/getPhoneVerif_codeVerif_edittext"
                    android:layout_width="243dp"
                    android:hint="Code" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:id="@+id/getPhoneVerif_validate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valider" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>