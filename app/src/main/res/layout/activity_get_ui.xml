<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".inscriptionSequence.GetUIActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/getUiAct_surname_edittext"
                    android:hint="Nom"
                    android:imeActionLabel="Done"
                    android:singleLine="true"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/getUiAct_firstname_edittext"
                    android:hint="PrÃ©nom"
                    android:imeActionLabel="Done"
                    android:singleLine="true"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/getUiAct_email_edittext"
                    android:hint="email"
                    android:textAppearance="@style/FirebaseUI.TextInputEditText.EmailField"
                    android:imeActionLabel="Done"
                    android:singleLine="true"/>
        </TableRow>


        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:id="@+id/getUiAct_nextstep_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suivant" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>