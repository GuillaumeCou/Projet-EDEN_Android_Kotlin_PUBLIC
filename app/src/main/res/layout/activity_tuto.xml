<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plusActivities.TutoActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent">


        <TextView
            android:id="@+id/message_alerte"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/tuto_message"
            android:layout_marginTop="40dp"
            android:textColor="@color/BleuEden"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_ecran"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/points_median"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/point_median"
            android:textColor="@color/BleuEden"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/trois_points"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/youtube_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>



    </LinearLayout>




</RelativeLayout>