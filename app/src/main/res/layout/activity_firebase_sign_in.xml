<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".KtSignIn">
    <TextView
            android:id="@+id/inscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Inscription"
            android:textSize="35dp" />

    <com.google.android.gms.common.SignInButton

            android:id="@+id/google_sign_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/inscription"
            style="@style/LoginButton"
    />


    <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/google_sign_in_button"
            style="@style/LoginButton"/>





    <TextView
            android:id="@+id/ou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook_login_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/ou"
            android:textSize="20dp" />

    <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:ems="10"
            android:hint="   Mot de passe"
            android:inputType="textPassword" />

    <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ou"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_round"
            android:ems="10"
            android:hint="   email"
            android:inputType="textPersonName" />

    <Button
            android:id="@+id/button_inscription"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_round"
            android:text="S'inscrire"
            android:textColor="#FFFFFF" />


</RelativeLayout>